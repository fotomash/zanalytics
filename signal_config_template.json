{
    "signals_dir": "./signals",
    "risk_per_trade": 0.02,
    "max_open_positions": 3,
    "max_correlation": 0.7,
    "signal_filters": {
        "min_confidence": 0.6,
        "min_risk_reward": 1.5,
        "max_drawdown": 0.05,
        "required_confirmations": 2,
        "trend_alignment_required": true,
        "volume_confirmation": true
    },
    "timeframe_weights": {
        "1m": 0.1,
        "5m": 0.15,
        "15m": 0.2,
        "1h": 0.25,
        "4h": 0.2,
        "1d": 0.1
    },
    "position_sizing": {
        "method": "kelly_criterion",
        "max_position_size": 0.1,
        "scale_with_confidence": true,
        "account_balance": 10000,
        "margin_requirement": 0.1
    },
    "stop_loss": {
        "atr_multiplier": 2.0,
        "min_distance": 0.002,
        "max_distance": 0.05,
        "trailing_enabled": true,
        "trailing_distance": 0.015,
        "breakeven_after_profit": 0.01
    },
    "take_profit": {
        "targets": [1.5, 2.5, 4.0],
        "partial_exits": [0.4, 0.3, 0.3],
        "move_stop_after_tp1": true
    },
    "signal_validation": {
        "check_correlation": true,
        "max_correlated_positions": 2,
        "correlation_threshold": 0.7,
        "check_news_events": false,
        "avoid_major_news_minutes": 30
    },
    "notifications": {
        "enabled": false,
        "channels": ["console", "file"],
        "priority_threshold": 2,
        "aggregate_signals": true
    }
}