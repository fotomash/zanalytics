{
  "version": 1,
  "formatters": {
    "standard": {
      "format": "%(asctime)s - %(levelname)s - [%(name)s:%(lineno)d] - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "standard",
      "level": "INFO",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "standard",
      "filename": "logs/zanalytics.log",
      "level": "INFO"
    }
  },
  "root": {
    "handlers": ["console", "file"],
    "level": "INFO"
  }
}
