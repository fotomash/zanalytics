{
    "dashboard": {
        "title": "Zanalytics Trading Dashboard",
        "theme": "dark",
        "auto_refresh_interval": 60,
        "max_signals_display": 5,
        "default_timeframe": "1h",
        "default_symbol": "BTC/USDT"
    },
    "charts": {
        "price_chart": {
            "height": 800,
            "show_volume": true,
            "show_indicators": true,
            "indicators": ["sma_20", "sma_50", "ema_9", "ema_21", "bb_bands", "rsi", "macd"]
        },
        "multi_timeframe": {
            "enabled": true,
            "timeframes": ["15m", "1h", "4h", "1d"]
        }
    },
    "components": {
        "market_scanner": {
            "enabled": true,
            "refresh_interval": 300,
            "max_symbols": 20
        },
        "performance_tracker": {
            "enabled": true,
            "metrics": ["win_rate", "risk_reward", "sharpe_ratio", "drawdown"]
        },
        "alert_manager": {
            "enabled": true,
            "alert_types": ["high_priority_signal", "price_near_entry", "stop_loss_hit"],
            "notification_methods": ["dashboard", "console"]
        },
        "portfolio_analysis": {
            "enabled": false,
            "update_interval": 60
        }
    },
    "data_sources": {
        "market_data_dir": "./enriched",
        "signals_dir": "./signals",
        "integrated_results_dir": "./integrated_results",
        "llm_outputs_dir": "./llm_outputs"
    },
    "display_options": {
        "decimal_places": {
            "price": 4,
            "percentage": 2,
            "volume": 0
        },
        "color_scheme": {
            "bullish": "#28a745",
            "bearish": "#dc3545",
            "neutral": "#6c757d"
        },
        "date_format": "%Y-%m-%d %H:%M:%S"
    }
}