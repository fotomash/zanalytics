{
  "symbols": ["BTC/USDT", "ETH/USDT", "SOL/USDT"],
  "timeframes": ["15m", "1h", "4h", "1d"],
  "update_interval": 300,
  "backtest_enabled": true,
  "llm_export_enabled": true,
  "dashboard_enabled": true,

  "data_pipeline": {
    "lookback_periods": {
      "15m": 500,
      "1h": 500,
      "4h": 500,
      "1d": 200
    },
    "indicators": {
      "sma_periods": [20, 50, 200],
      "ema_periods": [12, 26],
      "rsi_period": 14,
      "bb_period": 20,
      "atr_period": 14
    }
  },

  "signal_config": {
    "min_confidence": 0.6,
    "signal_types": ["breakout", "reversal", "continuation"],
    "confirmation_required": true
  },

  "backtest_config": {
    "initial_capital": 10000,
    "commission": 0.001,
    "slippage": 0.0005,
    "optimization_enabled": true
  },

  "risk_limits": {
    "max_positions": 3,
    "max_risk_per_trade": 0.02,
    "max_daily_loss": 0.05,
    "max_leverage": 2
  },

  "export_settings": {
    "format": ["json", "csv"],
    "compress": true,
    "retention_days": 30
  }
}